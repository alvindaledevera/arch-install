#!/usr/bin/env bash
set -e

# Export variables for chroot
export EFI_PART ARCH_PART HOSTNAME USERNAME KEYMAP LOCALE TIMEZONE

# Copy chroot scripts into the new system
cp -r "$ROOT_DIR/scripts/chroot" /mnt/root/chroot

# Run all chroot scripts numerically
for script in /mnt/root/chroot/[0-9][0-9]*.sh; do
    echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
    echo "▶ Running $(basename "$script") in chroot"
    echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
    arch-chroot /mnt "/root/chroot/$(basename "$script")"
done

echo "✅ INSTALL COMPLETE"
